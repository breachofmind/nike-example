.svg-icon
  display block
  svg
    width 20px
    height 20px

.social-icon
  border-radius 50%
  width 30px
  height 30px
  padding-top 5px
  background black
  &.is-facebook
    background #3b5693
  &.is-twitter
    background #5fabe0
  &.is-instagram
    background #457aa2
  &.is-youtube
    background #e82e33
  svg
    fill white


.social-icon-list li>a
  display block
  padding 0 10px

.icon-list
  margin 0 auto
  padding 0
  list-style none

.icon-list-item
  text-align center
  img
    border-radius 10px
    margin-bottom 15px
    box-shadow 1px 1px 2px rgba(black, 0.5)
  h4
    color black
    margin 0 0 8px
  p
    font-size 14px
  a
    text-decoration none