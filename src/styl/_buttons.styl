.button, a.button
  font-family headingFontFamily
  font-weight normal
  text-transform uppercase
  padding 8px 15px
  display inline-block
  border-radius 3px
  text-decoration none
  color black
  border 1px solid #efefef
  cursor pointer
  background white
  &:focus,
  &:hover
    text-decoration none

.button.is-primary
  background white
  color black

.button.is-link
  border none
  padding 8px 0
  display block

.button.expanded
  width 100%
  text-align center