// Main stylesheet
@font-face
  font-family OneNike
  src url("/fonts/OneNike.woff")


@require _vars
@require _utils
@require _type
@require _layout
@require _buttons



.menu-list
  list-style none
  margin 0
  padding 0
  li, li>a
    display block
  li>a
    text-align center
  +smallOnly()
    li>a
      padding 8px 14px
      border-bottom 1px solid #efefef
    li:first-child>a
      border-top 1px solid #efefef

  +mediumUp()
    display block
    text-align center
    li
      display inline-block
      padding 0 25px
      border-right 2px solid linkColor
      &:last-child
        border-right none

